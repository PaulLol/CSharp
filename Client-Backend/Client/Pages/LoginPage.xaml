<Page x:Class="Client.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    <Grid>
        <Button x:Name="btnLogin" Content="LogIn" HorizontalAlignment="Left" Margin="626,24,0,0" VerticalAlignment="Top" Width="56" Click="btnLogin_Click"/>
        <Button x:Name="btnRegister" Content="Register" HorizontalAlignment="Left" Margin="694,24,0,0" VerticalAlignment="Top" Width="56" Click="btnRegister_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="200,26,0,0" Text="E-mail" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="410,27,0,0" Text="Password" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxMail" HorizontalAlignment="Left" Margin="245,26,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="155"/>
        <PasswordBox x:Name="pbxPassword" HorizontalAlignment="Left" Margin="469,26,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Page>
